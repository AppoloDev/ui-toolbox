{
    "name": "appolodev/ui-toolbox",
    "description": "Toolbox UI for Symfony",
    "type": "symfony-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Fredxd",
            "email": "frederic@appolo.fr"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=8.3",
        "twig/twig": "^3.0",
        "symfony/ux-twig-component": "^2.9",
        "symfony/twig-bundle": "^7.2",
        "symfony/ux-icons": "^2.18",
        "symfonycasts/tailwind-bundle": "^0.10",
        "symfony/asset-mapper": "^7.3",
        "symfony/console": "^7.3"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "*",
        "phpstan/phpstan": "*",
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "AppoloDev\\UIToolboxBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AppoloDev\\UIToolboxBundle\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "auto-scripts": {
            "ui-toolbox:importmap:merge --path=vendor/appolodev/ui-toolbox/config/importmap.php --project=importmap.php": "symfony-cmd",
            "importmap:install": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "test": "phpunit",
        "phpstan": "phpstan analyse -c phpstan.neon.dist",
        "fix": "PHP_CS_FIXER_IGNORE_ENV=1 php-cs-fixer fix --config=.php-cs-fixer.dist.php"
    }
}
